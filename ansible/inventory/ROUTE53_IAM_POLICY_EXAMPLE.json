{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowDNS01ForSenthilreddyZone",
      "Effect": "Allow",
      "Action": [
        "route53:ChangeResourceRecordSets"
      ],
      "Resource": "arn:aws:route53:::hostedzone/REPLACE_WITH_ZONE_ID"
    },
    {
      "Sid": "AllowReadHostedZones",
      "Effect": "Allow",
      "Action": [
        "route53:ListHostedZonesByName",
        "route53:ListResourceRecordSets",
        "route53:ListHostedZones",
        "route53:GetChange"
      ],
      "Resource": "*"
    }
  ]
}
